<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1"/>
  <template class="LogicEditor" parent="AdwBin">
    <property name="child">
      <object class="AdwOverlaySplitView" id="split_view">
        <property name="sidebar-position">start</property>
        <property name="content">
          <object class="GtkStack" id="canvas_stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">canvas</property>
                <property name="child">
                  <object class="GtkDrawingArea" id="canvas">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">placeholder</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="title">Logic Editor</property>
                    <property name="description">This editor scripts the consequences of player actions. Use Action Nodes to perform commands, Condition Nodes to check game state, and Dialogue Nodes for simple character barks.</property>
                    <property name="icon-name">dialog-information-symbolic</property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
        <property name="sidebar">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title">Tool Palette</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Add Dialogue Node</property>
                    <child type="suffix">
                      <object class="GtkButton" id="add_dialogue_node_button">
                        <property name="label">Add Dialogue</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Add Condition Node</property>
                    <child type="suffix">
                      <object class="GtkButton" id="add_condition_node_button">
                        <property name="label">Add Condition</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Add Action Node</property>
                    <child type="suffix">
                      <object class="GtkButton" id="add_action_node_button">
                        <property name="label">Add Action</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="MiniMap" id="minimap" />
            </child>
            <child>
              <object class="DynamicNodeEditor" id="props_panel" />
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
