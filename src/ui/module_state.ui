<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>
  <template class="GlobalStateEditor" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="AdwHeaderBar">
        <child type="start">
          <object class="GtkButton" id="add_button">
            <property name="icon-name">list-add-symbolic</property>
            <property name="tooltip-text">Add New Variable</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkButton" id="delete_button">
            <property name="icon-name">edit-delete-symbolic</property>
            <property name="tooltip-text">Delete Selected Variable</property>
            <property name="sensitive">false</property>
          </object>
        </child>
        <property name="title-widget">
          <object class="GtkSearchEntry" id="search_entry">
            <property name="placeholder-text">Search Variables</property>
            <property name="hexpand">true</property>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkStack" id="stack">
        <property name="vexpand">true</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">content</property>
            <property name="child">
              <object class="AdwClamp">
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="vexpand">true</property>
                        <property name="hscrollbar-policy">never</property>
                        <property name="vscrollbar-policy">automatic</property>
                        <property name="child">
                          <object class="GtkColumnView" id="column_view"/>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">empty</property>
            <property name="child">
              <object class="AdwStatusPage">
                <property name="title">No Global Variables</property>
                <property name="description">Create a new variable to manage game state.</property>
                <property name="icon-name">preferences-system-symbolic</property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
